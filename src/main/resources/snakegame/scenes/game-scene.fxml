<Pane prefHeight="700.0" prefWidth="1000.0" style="-fx-background-color: rgb(224, 233, 209);" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="snakegame.controllers.HelloController">
   <children>
      <AnchorPane layoutX="300.0" layoutY="100.0">
         <children>
            <TilePane fx:id="tilePane" layoutX="-2.0" layoutY="68.0" prefHeight="404.0" prefWidth="404.0" />
            <Label fx:id="scoreLabel" alignment="CENTER" layoutY="-44.0" prefHeight="50.0" prefWidth="400.0" style="-fx-alignment: center;" text="Label">
               <font>
                  <Font name="Calibri Bold" size="50.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
      <Pane fx:id="gameoverPane" layoutX="300.0" layoutY="170.0" prefHeight="400.0" prefWidth="400.0" visible="false">
