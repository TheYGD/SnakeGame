            <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#00000080" height="400.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" width="400.0" />
            <Label alignment="CENTER" layoutX="75.0" layoutY="165.0" prefHeight="50.0" prefWidth="250.0" text="Game Over!" textFill="WHITE">
               <font>
                  <Font name="Calibri Bold" size="40.0" />
               </font></Label>
